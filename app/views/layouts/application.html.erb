<!DOCTYPE html>
<html>
  <head>
    <title>Pf1</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application' %>
  </head>

  <body>
　<header>
　  <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
    <div class="container">
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarSupportedContent">
        <ul class="navbar-nav ms-auto mb-2 mb-lg-0">
        </ul>
      </div>
　</header>

　  <div class = row >
　    <div class = col-2>
　      <div class="listings">
          <div class="listings_channels">
            <h2 class="listings_header">admin</h2>
            <ul class="channel_list">
            　   <% if admin_signed_in? %>
                  <li class="nav-item nav-link"><%= link_to "会員一覧", admin_users_path, class:"link" %></li>
                  <li class="nav-item nav-link"><%= link_to "ログアウト", destroy_admin_session_path, method: :delete, class:"link" %></li>
                <% elsif user_signed_in? %>
                  <li class="nav-item nav-link"><%= link_to "みんなの投稿", maps_path, class:"link" %></li>
                  <li class="nav-item nav-link"><%= link_to "投稿", new_map_path, class:"link" %></li>
                  <li class="nav-item nav-link"><%= link_to "ログアウト", destroy_user_session_path, method: :delete, class:"link" %></li>
                <% else %>
                  <li class="nav-item nav-link"><%= link_to "home", root_path, class:"link" %></li>
                  <li class="nav-item nav-link"><%= link_to "about", home_about_path, class:"link" %></li>
                  <li class="nav-item nav-link"><%= link_to "新規登録", new_user_registration_path, class:"link" %></li><br>
                  <li class="nav-item nav-link"><%= link_to "ログイン", new_user_session_path, class:"link" %></li>
               <% end %>
             </ul>
          </div>
        </div>
      </div>
         <%= yield %>
    </div>
  </body>
</html>