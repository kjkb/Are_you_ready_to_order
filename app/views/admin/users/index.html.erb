<div class = "col-9" >
  <table class="table table-hover table-inverse admin_customers_table">
    <thead>
      <tr>
        <th>会員ID</th>
        <th>氏名</th>
        <th>メールアドレス</th>
        <th>ステータス</th>
      </tr>
    </thead>
    <tbody>
      <% @users.each do |user| %>
        <tr>
          <td><%= user.id %></td>
          <td><%= link_to admin_user_path(user) do %>
                <%= user.name %>
              <% end %>
          </td>
          <td><%= user.email %></td>
          <td>
            <% if user.is_deleted == false %>
                有効
            <% else %>
                退会
            <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
